
<% if !(@order.items.empty? || @order.supermarket == @product.supermarket) %>
  alert("This product belongs to another supermarket. Please choose products from <%= @order.supermarket.name %>")
<% elsif @order.errors.any? || @item.errors.any? %>
  alert("not valid.")
<% else %>
  $(".cart-text").html("<%= escape_javascript(render 'layouts/cart_text') %>")
<% end %>